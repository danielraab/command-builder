{
  "commands": [
    {
      "id": "find",
      "name": "find",
      "description": "Search for files in a directory hierarchy",
      "link": "https://man7.org/linux/man-pages/man1/find.1.html",
      "flags": [],
      "options": [
        {
          "id": "path",
          "option": "",
          "description": "Starting path for the search",
          "selected": true,
          "parameter": {
            "type": "text",
            "placeholder": ".",
            "defaultValue": "."
          }
        },
        {
          "id": "name",
          "option": "-name",
          "description": "Base of file name matches pattern",
          "selected": false,
          "parameter": {
            "type": "text",
            "placeholder": "*.txt"
          }
        },
        {
          "id": "type",
          "option": "-type",
          "description": "File type",
          "selected": false,
          "parameter": {
            "type": "enum",
            "enumValues": [
              {
                "value": "f",
                "label": "Regular file",
                "description": "Regular file"
              },
              {
                "value": "d",
                "label": "Directory",
                "description": "Directory"
              },
              {
                "value": "l",
                "label": "Symbolic link",
                "description": "Symbolic link"
              }
            ]
          }
        },
        {
          "id": "size",
          "option": "-size",
          "description": "File size (e.g., +100M, -1G)",
          "selected": false,
          "parameter": {
            "type": "text",
            "placeholder": "+100M"
          }
        },
        {
          "id": "maxdepth",
          "option": "-maxdepth",
          "description": "Descend at most levels of directories",
          "selected": false,
          "parameter": {
            "type": "number",
            "placeholder": "3"
          }
        }
      ],
      "examples": [
        {
          "command": "find . -type f -name \"*.js\"",
          "description": "Find all JavaScript files in current directory and subdirectories",
          "presets": {
            "path": {
              "selected": true,
              "value": "."
            },
            "type": {
              "selected": true,
              "value": "f"
            },
            "name": {
              "selected": true,
              "value": "*.js"
            }
          }
        },
        {
          "command": "find /var/log -type f -size +100M",
          "description": "Find files larger than 100MB in /var/log",
          "presets": {
            "path": {
              "selected": true,
              "value": "/var/log"
            },
            "type": {
              "selected": true,
              "value": "f"
            },
            "size": {
              "selected": true,
              "value": "+100M"
            }
          }
        }
      ]
    },
    {
      "id": "grep",
      "name": "grep",
      "description": "Search for patterns in files - print lines that match patterns",
      "link": "https://www.gnu.org/software/grep/manual/grep.html",
      "flags": [
        {
          "id": "ignore-case",
          "flag": "-i",
          "description": "Ignore case distinctions in patterns and data",
          "selected": false
        },
        {
          "id": "invert-match",
          "flag": "-v",
          "description": "Invert the sense of matching, to select non-matching lines",
          "selected": false
        },
        {
          "id": "recursive",
          "flag": "-r",
          "description": "Read all files under each directory, recursively",
          "selected": false
        },
        {
          "id": "line-number",
          "flag": "-n",
          "description": "Prefix each line of output with the line number",
          "selected": false
        },
        {
          "id": "count",
          "flag": "-c",
          "description": "Suppress normal output; instead print a count of matching lines",
          "selected": false
        },
        {
          "id": "files-with-matches",
          "flag": "-l",
          "description": "Suppress normal output; instead print the name of each input file",
          "selected": false
        }
      ],
      "options": [
        {
          "id": "context",
          "option": "-C",
          "description": "Print NUM lines of output context",
          "selected": false,
          "parameter": {
            "type": "number",
            "placeholder": "3",
            "defaultValue": 3
          }
        },
        {
          "id": "before-context",
          "option": "-B",
          "description": "Print NUM lines of leading context before matching lines",
          "selected": false,
          "parameter": {
            "type": "number",
            "defaultValue": "3"
          }
        },
        {
          "id": "after-context",
          "option": "-A",
          "description": "Print NUM lines of trailing context after matching lines",
          "selected": false,
          "parameter": {
            "type": "number",
            "defaultValue": "3"
          }
        },
        {
          "id": "max-count",
          "option": "-m",
          "description": "Stop reading a file after NUM matching lines",
          "selected": false,
          "parameter": {
            "type": "number",
            "placeholder": "10"
          }
        },
        {
          "id": "pattern",
          "option": "",
          "description": "Pattern to search for - supports regular expressions",
          "link": "https://www.gnu.org/software/grep/manual/grep.html#Regular-Expressions",
          "selected": true,
          "parameter": {
            "type": "text",
            "placeholder": "search pattern"
          }
        },
        {
          "id": "file",
          "option": "",
          "description": "File(s) to search in",
          "selected": false,
          "parameter": {
            "type": "text",
            "placeholder": "filename or path"
          }
        }
      ],
      "examples": [
        {
          "command": "grep -rni \"TODO\" .",
          "description": "Search recursively for 'TODO' (case-insensitive) with line numbers",
          "presets": {
            "recursive": {
              "selected": true
            },
            "line-number": {
              "selected": true
            },
            "ignore-case": {
              "selected": true
            },
            "pattern": {
              "selected": true,
              "value": "TODO"
            },
            "file": {
              "selected": true,
              "value": "."
            }
          }
        },
        {
          "command": "grep -c \"error\" app.log",
          "description": "Count occurrences of 'error' in app.log",
          "presets": {
            "count": {
              "selected": true
            },
            "pattern": {
              "selected": true,
              "value": "error"
            },
            "file": {
              "selected": true,
              "value": "app.log"
            }
          }
        }
      ]
    },
    {
      "id": "ln",
      "name": "ln",
      "description": "Create links between files - make hard links or symbolic links",
      "link": "https://man7.org/linux/man-pages/man1/ln.1.html",
      "flags": [
        {
          "id": "symbolic",
          "flag": "-s",
          "description": "Create symbolic (soft) link instead of hard link",
          "selected": true
        },
        {
          "id": "force",
          "flag": "-f",
          "description": "Remove existing destination files",
          "selected": false
        },
        {
          "id": "interactive",
          "flag": "-i",
          "description": "Prompt whether to remove destinations",
          "selected": false
        },
        {
          "id": "verbose",
          "flag": "-v",
          "description": "Print name of each linked file",
          "selected": false
        },
        {
          "id": "no-dereference",
          "flag": "-n",
          "description": "Treat destination that is a symlink to a directory as a normal file",
          "selected": false
        },
        {
          "id": "relative",
          "flag": "-r",
          "description": "Create symbolic links relative to link location",
          "selected": false
        },
        {
          "id": "backup",
          "flag": "-b",
          "description": "Make a backup of each existing destination file",
          "selected": false
        }
      ],
      "options": [
        {
          "id": "target",
          "option": "",
          "description": "Target file or directory to link to",
          "selected": true,
          "parameter": {
            "type": "text",
            "placeholder": "/path/to/target"
          }
        },
        {
          "id": "link-name",
          "option": "",
          "description": "Name of the link to create",
          "selected": true,
          "parameter": {
            "type": "text",
            "placeholder": "/path/to/link"
          }
        }
      ],
      "examples": [
        {
          "command": "ln -s /usr/bin/python3 /usr/local/bin/python",
          "description": "Create a symbolic link from python to python3",
          "presets": {
            "symbolic": {
              "selected": true
            },
            "target": {
              "selected": true,
              "value": "/usr/bin/python3"
            },
            "link-name": {
              "selected": true,
              "value": "/usr/local/bin/python"
            }
          }
        },
        {
          "command": "ln -sf /etc/nginx/sites-available/mysite /etc/nginx/sites-enabled/mysite",
          "description": "Force create symbolic link, overwriting if exists",
          "presets": {
            "symbolic": {
              "selected": true
            },
            "force": {
              "selected": true
            },
            "target": {
              "selected": true,
              "value": "/etc/nginx/sites-available/mysite"
            },
            "link-name": {
              "selected": true,
              "value": "/etc/nginx/sites-enabled/mysite"
            }
          }
        },
        {
          "command": "ln -srv /var/www/html/images /home/user/site/img",
          "description": "Create relative symbolic link with verbose output",
          "presets": {
            "symbolic": {
              "selected": true
            },
            "relative": {
              "selected": true
            },
            "verbose": {
              "selected": true
            },
            "target": {
              "selected": true,
              "value": "/var/www/html/images"
            },
            "link-name": {
              "selected": true,
              "value": "/home/user/site/img"
            }
          }
        }
      ]
